<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.brigada.javaFX.controller.MainController">

      <VBox prefHeight="200.0" prefWidth="100.0">

            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
               <Text text="Анимация сортировки" textAlignment="CENTER">
                   <font>
                       <Font name="System Bold Italic" size="20.0" />
                   </font>
               </Text>
            </HBox>
            <VBox prefHeight="100.0" prefWidth="200.0">
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="163.0">
                    <Text text="Добавить элемент:" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Text>
                    <Button fx:id="addButton" onAction="#addElementModal" prefHeight="30.0" prefWidth="30.0" text="+" textAlignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <Text text="Удалить элемент:" textAlignment="CENTER">
                        <font>
                            <Font size="20.0" />
                        </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></Text>
                    <Button fx:id="removeButton" prefHeight="30.0" prefWidth="30.0" text="-" textAlignment="CENTER">
                        <font>
                            <Font name="System Bold Italic" size="14.0" />
                        </font>
                        <HBox.margin>
                            <Insets left="15.0" />
                        </HBox.margin></Button>
                </HBox>
            </VBox>
      <Pane fx:id="paneSort" prefHeight="220.0" prefWidth="600.0" />
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" text="Запустить сортировку" textAlignment="CENTER" />
         </children>
      </HBox>

      </VBox>

</StackPane>
